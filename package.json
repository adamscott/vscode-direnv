{
  "name": "vscode-direnv",
  "displayName": "direnv",
  "description": "Automatically detect and load .envrc when opening VS Code",
  "version": "0.0.2",
  "publisher": "Rubymaniac",
  "license": "MIT",
  "engines": {
    "vscode": "^1.51.0"
  },
  "keywords": [
    "multi-root ready"
  ],
  "bugs": {
    "url": "https://github.com/rubymaniac/vscode-direnv/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rubymaniac/vscode-direnv.git"
  },
  "scripts": {
    "test": "run-s -s \"test:unit -- {@}\" --",
    "test:unit": "./node_modules/.bin/mocha",
    "lint": "./node_modules/.bin/eslint -c .eslintrc.js",
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.10",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-es": "^3.26.7",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.8",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.1.2",
    "typescript-is": "^0.17.0",
    "vscode-test": "^1.4.1",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {},
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "direnv.version",
        "title": "direnv: view version",
        "description": "Shows the version of the direnv installed."
      },
      {
        "command": "direnv.view",
        "title": "direnv: view .envrc",
        "description": "Opens up the .envrc file."
      },
      {
        "command": "direnv.allow",
        "title": "direnv: allow the .envrc",
        "description": "Allows direnv to load the .envrc."
      },
      {
        "command": "direnv.restart",
        "title": "direnv: restart the editor",
        "description": "Restarts Visual Studio Code to apply the current direnv environemnt. Useful if direnv allow takes time."
      }
    ]
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
